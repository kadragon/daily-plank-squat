{
  "name": "daily-plank-squat",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "lint": "biome lint .",
    "typecheck": "bunx tsc --noEmit",
    "check:no-focused-tests": "bash scripts/check-no-focused-tests.sh",
    "check:merge-conflicts": "bash scripts/check-merge-conflicts.sh",
    "precommit": "bun run lint && bun run typecheck && bun run test && bun run check:no-focused-tests && bun run check:merge-conflicts",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/bun": "latest",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.4",
    "happy-dom": "^20.6.2",
    "husky": "^9.1.7",
    "vite": "^7.3.1",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^4.0.18"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  }
}
